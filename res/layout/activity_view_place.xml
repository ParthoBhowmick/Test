<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/viewPlTv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#FFFF33"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/VPtextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:text="Ratings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/VPratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
           />
    </LinearLayout>
    
     <TextView
        android:id="@+id/VPtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="BestTime to Visit"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <ImageView
             android:id="@+id/VPimageView1"
             android:layout_width="110dp"
             android:layout_height="50dp"
             android:src="@drawable/abc_ic_menu_share_holo_light" />

         <ImageView
             android:id="@+id/VPimageView2"
             android:layout_width="110dp"
             android:layout_height="50dp"
             android:src="@drawable/abc_ic_menu_share_holo_light" />
         
          <ImageView
             android:id="@+id/VPimageView3"
             android:layout_width="110dp"
             android:layout_height="50dp"
             android:src="@drawable/abc_ic_menu_share_holo_light" />

     </LinearLayout>

     <TextView
         android:id="@+id/VPtextView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Place Images"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="10dp"
         android:textStyle="bold"
         android:textSize="25dp"
         android:textColor="@android:color/holo_green_dark"
         android:textAppearance="?android:attr/textAppearanceLarge" />
     
      <ImageView
             android:id="@+id/VPimageView4"
             android:layout_marginTop="5dp"
             android:layout_gravity="center"
             android:layout_width="280dp"
             android:layout_height="170dp"
             android:src="@drawable/abc_ic_menu_share_holo_light" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          
       <TextView
         android:id="@+id/VPtextView4"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:text="Description"
         android:layout_marginTop="2dp"
         android:textStyle="bold"
         android:textSize="20dp"
         android:gravity="center"
         android:background="#D3D3D3"
         android:textAppearance="?android:attr/textAppearanceLarge" />
       
        <TextView
         android:id="@+id/VPtextView5"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:text="Next"
         android:onClick="next"
         android:layout_marginTop="2dp"
         android:textStyle="bold"
         android:textSize="20dp"
         android:gravity="center"
         android:background="#000000"
         android:textColor="@android:color/white"
         android:textAppearance="?android:attr/textAppearanceLarge" />
      </LinearLayout>

      <TextView
         android:id="@+id/VPtextView6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Description"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="4dp"
         android:textStyle="bold"
         android:textSize="25dp"
         android:textColor="@android:color/holo_red_dark"
         android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/VPtextView7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#066"
          android:text="Medium Text"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="7dp"
          android:padding="5dp"
          android:textColor="@android:color/white"
          android:textAppearance="?android:attr/textAppearanceMedium" />

      <TextView
          android:id="@+id/VPtextView8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Recomanded Hotel"
          android:layout_marginTop="4dp"
         android:layout_marginLeft="4dp"
         android:textStyle="bold"
         android:textSize="25dp"
         android:textColor="#60C"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <ListView
          android:id="@+id/VPlistView1"
          android:layout_width="match_parent"
          android:layout_height="250dp" >
      </ListView>
      
      <TextView
          android:id="@+id/VPtextView9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Emergency Contact"
          android:layout_marginTop="7dp"
         android:layout_marginLeft="4dp"
         android:textStyle="bold"
         android:textSize="25dp"
         android:textColor="#600"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <ListView
          android:id="@+id/VPlistView2"
          android:layout_width="match_parent"
          android:layout_height="130dp" >
      </ListView>

</LinearLayout>
    
</ScrollView>